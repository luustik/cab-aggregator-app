<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.6.xsd">

    <changeSet id="v1-create-ride-table" author="lustikkkkk">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="ride"/>
            </not>
        </preConditions>
        <createTable tableName="ride">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints nullable="false" primaryKey="true"/>
            </column>

            <column name="driver_id" type="BIGINT" />

            <column name="passenger_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>

            <column name="departure_address" type="varchar(255)">
                <constraints nullable="false"/>
            </column>

            <column name="arrival_address" type="varchar(255)">
                <constraints nullable="false"/>
            </column>

            <column name="status" type="varchar(255)">
                <constraints nullable="false"/>
            </column>

            <column name="order_date_time" type="DATETIME">
                <constraints nullable="false"/>
            </column>

            <column name="cost" type="DECIMAL(5,2)">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <rollback>
            <dropTable tableName="ride"/>
        </rollback>
    </changeSet>

    <changeSet id="v1-load-data" author="lustikkkkk">
        <loadData tableName="ride" file="db.changelog/data/ride-data.csv"/>
        <rollback>
            <delete tableName="ride">
                <where>id IN (SELECT id FROM driver)</where>
            </delete>
        </rollback>
    </changeSet>

</databaseChangeLog>