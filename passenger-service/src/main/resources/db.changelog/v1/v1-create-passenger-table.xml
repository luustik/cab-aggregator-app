<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.6.xsd">

    <changeSet id="v1" author="lustikkkkk">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="passenger"/>
            </not>
        </preConditions>
        <createTable tableName="passenger">
            <column name="id" type="int" autoIncrement="true">
                <constraints nullable="false" primaryKey="true"/>
            </column>

            <column name="name" type="varchar" >
                <constraints nullable="false"/>
            </column>

            <column name="email" type="varchar">
                <constraints nullable="false" unique="true"/>
            </column>

            <column name="phone" type="varchar">
                <constraints nullable="false" unique="true"/>
            </column>

            <column name="deleted" type="boolean" defaultValueBoolean="false">
            </column>
        </createTable>

        <rollback>
            <dropTable tableName="passenger"/>
        </rollback>
    </changeSet>

    <changeSet id="v1-load-data" author="lustikkkkk">
        <loadData tableName="passenger" file="db.changelog/data/passenger-data.csv"/>
        <rollback>
            <delete tableName="passenger">
                <where>id IN (SELECT id FROM driver)</where>
            </delete>
        </rollback>
    </changeSet>

</databaseChangeLog>